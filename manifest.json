{
 "name": "weshare",
 "version": "0.3.0.1",
 "manifest_version": 3,
 "description": "网页笔记软件，支持高亮、添加注记等功能",
 "icons": {
	"16": "images/icon.png",
	"32": "images/icon.png",
	"48": "images/icon.png",
	"128": "images/icon.png"
 },
 "permissions": [
          "contextMenus",
		  "storage",
		  "tabs",
		  "activeTab",
		  "clipboardRead",
		  "clipboardWrite",
		  "cookies",
		  "downloads",
		  "history",
		  "windows",
		  "sidePanel"
 ],
 "action": {
	"default_icon":"images/icon.png",
	"default_title":"weshare",
	"default_popup": "popup/popup.html"
 },
  "background": {
    "service_worker": "background/background.js",
	"type":"module"
  },
  "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["content/note.js","content/highlight.js","content/message.js"],
	 "css":["content/note.css","content/highlight.css"]
   }
  ],
  "options_page":"option/option.html",
   "side_panel": {
    "default_path": "sidebar/index.html"
  }
}